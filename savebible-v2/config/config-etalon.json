{
  "port": 3000,
  "data": {
    "input": "C:/Users/Hayk/Dropbox (Personal)/Data/",
    "output": "./output/",
    "media": "./media/",
    "temp": "./tmp/"
  },
  "log4js": {
    "appenders": [
      {
        "type": "console",
        "layout": {
          "type": "pattern",
          "pattern": "%[[%r] [%1.1p] -%] %m"
        }
      },
      {
        "type": "file",
        "filename": "${data.output}logs/app.log",
        "maxLogSize": 10485760,
        "numBackups": 3,
        "layout": {
          "type": "pattern",
          "pattern": "[%d{DATE}] [%1.1p] [%3.3c] - %m"
        }
      }
    ]
  }
}